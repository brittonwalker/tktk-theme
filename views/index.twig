{% extends "base.twig" %}

{% block content %}
	<div class="hero-split">
		<div class="container">
			<div class="hero-split__grid">
				<div class="hero-split__text">
					<div class="text-content">
						<div class="hero-split__heading">
							<h1 class="">Welcome to your blog!</h1>
						</div>
						<p class="mt-3 text-base text-gray-500 sm:mt-5 sm:text-lg sm:max-w-xl sm:mx-auto md:mt-5 md:text-xl lg:mx-0">This template is an archive page for all posts in your WordPress database. To help you get started, we've added a split hero component to create context on why you're here and what to expect and a list of your current posts with pagination underneath.</p>
					</div>
				</div>
				<div class="hero-split__img">
					<img src="https://source.unsplash.com/1600x900" alt="">
				</div>
			</div>
		</div>
	</div>
	<div class="post-grid mb-14">
		<div class="container">
			<div class="grid grid-cols-12">
				{% for item in posts %}
					<div class="post-tease-row">
						<a class="post-tease-row__card" href="{{ item.link }}">
							<div class="post-tease-row__img">
								<img src="{{ item.thumbnail.src|default('https://source.unsplash.com/1600x900') }}" alt="{{ item.thumbnail.alt|default('Alt text for your image') }}">
							</div>
							<div class="post-tease-row__content">
								<div class="post-tease-row__title">
									<h5>{{ item.title }}</h5>
								</div>
								<div class="post-tease-row__desc">
									<p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Amet laboriosam maiores eligendi nesciunt molestiae debitis incidunt velit facilis quam.</p>
								</div>
							</div>
						</a>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
{% endblock %}
